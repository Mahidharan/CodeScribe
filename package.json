{
  "name": "codescribe",
  "displayName": "CodeScribe - AI README Generator",
  "publisher": "Mahidharan",
  "description": "AI-powered VS Code extension that analyzes your project and generates professional README.md files using DeepSeek AI.",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mahidharan/codescribe"
  },
  "icon": "assets/icon.png",
  "keywords": [
    "AI",
    "README",
    "documentation",
    "DeepSeek",
    "OpenRouter",
    "project analyzer"
  ],
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Machine Learning",
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codescribe.helloWorld",
        "title": "CodeScribe: Generate AI README"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CodeScribe Settings",
      "properties": {
        "codescribe.openRouterApiKey": {
          "type": "string",
          "default": "",
          "description": "Enter your OpenRouter API key to enable AI README generation."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.9",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {}
}
